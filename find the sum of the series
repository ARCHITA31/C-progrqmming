#include <stdio.h>
 
int main()
{
    int n, i;
    int sum = 0;
 
    printf("Enter maximum values of series number: ");
    scanf("%d", &n);
    sum = (n * (n + 1) * (2 * n + 1 )) / 6;
    printf("Sum of the above given series : ");
    for (i = 1; i <= n; i++)
    {
        if (i != n)
            printf("%d^2 + ", i);
        else
            printf("%d^2 = %d ", i, sum);
    }
    return 0;
}
