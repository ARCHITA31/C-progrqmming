#include<stdio.h>
int main()
{
    int m, d;
    float r, total;
    scanf("%d", &m);
    scanf("%f", &r);
    scanf("%d", &d);
    switch(m)
    {
        case 1:
        total = r*d;
        printf("Hotel Tariff: Rs.%.2f", total);
        break;
       
        case 2:
        total = r*d;
        total+=0.2*total;
        printf("Hotel Tariff: Rs.%.2f", total);
        break;
        case 3:
        total = r*d;
        printf("Hotel Tariff: Rs.%.2f", total);
        break;
        case 4:
        total = r*d;
        total+=0.2*total;
        printf("Hotel Tariff: Rs.%.2f", total);
        break;
        default:
        printf(" Invalid Input");
    }
    return 0;

}
